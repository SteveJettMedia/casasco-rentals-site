
--- 
layout: base.njk 
pagination: 
  data: collections.locations 
  size: 1 
  alias: loc
permalink: "/locations/{{ loc.slug }}/index.html" 
eleventyComputed: 
  title:
  "{{ loc.name }} Apartments | {{ site.name }}" 
---

<h1>Hello I am location page {{ loc.nam }}</h1>

<section class="hero">
  <img src="{{ loc.heroImage }}" alt="{{ loc.name }} exterior" />
  <div class="hero-text">
    <h1 class="heading-xl">{{ loc.name }}</h1>
    <p class="subheading">{{ loc.marketing }}</p>
    <a class="btn btn-cta" href="{{ loc.cta.link }}">{{ loc.cta.text }}</a>
  </div>
</section>

<section class="details grid gap-4">
  <div>
    <h2>At a Glance</h2>
    <ul class="stats-list">
      <li><strong>Rent:</strong> ${{ loc.rent }} / mo</li>
      <li><strong>Size:</strong> {{ loc.sqft }} sq&nbsp;ft</li>
      <li><strong>Beds/Baths:</strong> {{ loc.bedBath }}</li>
      <li><strong>Lease Term:</strong> {{ loc.leaseTerm }}</li>
      <li><strong>Move-In:</strong> {{ loc.moveIn }}</li>
      <li><strong>Deposit:</strong> {{ loc.deposit }}</li>
      <li><strong>Availability:</strong> {{ loc.availability }}</li>
    </ul>
  </div>

  <div>
    <h2>Amenities</h2>
    <ul>
      {% for item in loc.amenities %}
        <li>{{ item }}</li>
      {% endfor %}
    </ul>
  </div>
</section>

<section class="location-map">
  <h2>See It on the Map</h2>
  <iframe
    src="{{ loc.mapLink }}"
    width="100%"
    height="300"
    style="border:0;"
    loading="lazy"
  ></iframe>
</section>

{% if loc.gallery and loc.gallery.length %}
  <section class="gallery">
    <h2>Photo Gallery</h2>
    <div class="grid gallery-grid">
      {% for img in loc.gallery %}
        <img src="{{ img.src }}" alt="{{ img.alt }}" />
      {% endfor %}
    </div>
  </section>
{% endif %}
